.scroll {
  height: 91.5vh;
}
.item:nth-child(1) {
  display: flex;
  height: 200rpx;
  flex-direction: column;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding: 0 8rpx;
  color: gray;
}

.item:nth-child(n + 2) {
  display: flex;
  height: 200rpx;
  flex-direction: column;
  color: gray;
  border-bottom: 1px solid #ccc;
  padding: 0 8rpx;
}
.item_header {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item_con {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item_con text:nth-child(2) {
  color: red;
}
.item_footer {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
