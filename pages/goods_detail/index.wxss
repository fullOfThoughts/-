@import '../../styles/iconfont.wxss';

.goods_swiper {
  height: 300rpx;
}
.goods_swiper_item {
  width: 300rpx;
}
.goods_swiper_item image {
  width: 100%;
}
.con {
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  height: 160rpx;
  height: 187rpx;
  border-bottom: 8rpx solid #eee;
}
.con_top {
  color: red;
  font-size: 30rpx;

  flex: 3;
  padding-top: 14rpx;
  align-items: center;
}
.con_bottom {
  flex: 7;
  display: flex;
  align-items: center;
}
.con_bottom_left {
  flex: 7;
  letter-spacing: 2rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.con_bottom_right {
  display: flex;
  flex-direction: column;
  position: relative;
  height: 100%;
  flex: 2;
}
.con_bottom_right text:nth-child(1) {
  text-align: center;
  height: 61rpx;
  font-size: 45rpx;
  line-height: 64rpx;
}
.con_bottom_right text:nth-child(2) {
  text-align: center;
}
.con_bottom_right::before {
  content: '';
  position: absolute;
  top: 28rpx;
  left: 0;
  width: 4rpx;
  height: 67rpx;
  background-color: #ddd;
}
.detail {
  display: flex;
  flex-direction: column;
}
.detail_con {
  margin-bottom: 118rpx;
}
.detail_title {
  height: 65rpx;
  color: red;

  line-height: 65rpx;
  text-align: center;
  font-size: 36rpx;
}
.detail_footer {
  position: fixed;
  width: 100%;
  display: flex;
  z-index: 999;
  height: 118rpx;
  background-color: #fff;
  bottom: 0;
  border-top: 2rpx solid #ddd;
}
.detail_footer view {
  display: flex;
  flex-direction: column;
}
.detail_footer view text:nth-child(1) {
  text-align: center;
  font-size: 50rpx;
  margin-top: 8rpx;
  margin-bottom: 7rpx;
}
.detail_footer view text:nth-child(2) {
  text-align: center;
}
.detail_footer view:nth-child(1) {
  flex: 1;
  margin-bottom: 11rpx;
  position: relative;
}
.detail_footer view button {
  position: absolute;
  opacity: 0;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.detail_footer view:nth-child(2) {
  flex: 1;
  position: relative;
}
.detail_footer view:nth-child(3) {
  flex: 1;
  position: relative;
}
.detail_footer view:nth-child(4) {
  flex: 1.5;
  line-height: 118rpx;
  text-align: center;
  font-size: 33rpx;

  background-color: #ff9900;
}
.detail_footer view:nth-child(5) {
  flex: 1.5;
  line-height: 118rpx;
  text-align: center;
  font-size: 33rpx;

  background-color: #ff0033;
}

.active {
  color: red;
}
