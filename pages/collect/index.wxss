.scroll {
  height: 91.3vh;
  background-color: #eee;
}
.item {
  height: 20vh;
  background-color: #fff;
  margin-bottom: 10rpx;
  display: flex;
}
.item:nth-child(1) {
  border-top: 1px solid #ccc;
}
.image {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.image image {
  width: 90%;
  height: 80%;
}
.right {
  flex: 2.7;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.title {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.price {
  color: red;
}
