.goods {
  width: 100%;
  height: 1044.66rpx;
}
.goods_item {
  display: flex;
  border-bottom: 2rpx solid #eee;
}
.goods_item .item_image {
  flex: 2;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_item .item_image image {
  width: 90%;
}
.item_con {
  flex: 3;
}
.item_con view:nth-child(1) {
  height: 78rpx;
  line-height: 78rpx;
  font-weight: 600;
  font-size: 30rpx;
}
.item_con view:nth-child(2) {
  height: 92rpx;
  line-height: 47rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.item_con view:nth-child(3) {
  height: 50rpx;
  margin-top: 64rpx;
}
